<Window x:Class="Budget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budget"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="InputNavn" HorizontalAlignment="Left" Margin="212,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" TextInput="NavnInput"/>
        <ListBox x:Name="ListBoxIndtaegter" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="184,94,0,179" SelectionChanged="SelectionChanged_Indtaegter" HorizontalAlignment="Left" Width="179"/>
        <ListBox x:Name="ListBoxUdgifter" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="377,94,0,179" SelectionChanged="SelectionChanged_Udgifter" HorizontalAlignment="Left" Width="174"/>
        <TextBox x:Name="InputKroner" HorizontalAlignment="Left" Margin="377,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" TextInput="KronerInput"/>
        <Button x:Name="ButtonIndtaegter" Content="Tilføj til indtægter" HorizontalAlignment="Left" Margin="212,70,0,0" VerticalAlignment="Top" Height="19" Width="118" Click="TilføjTilIndtægter"/>
        <Button x:Name="ButtonUdgifter" Content="Tilføj til Udgifter" HorizontalAlignment="Left" Margin="410,70,0,0" VerticalAlignment="Top" Height="19" Width="118" Click="TilføjTilUdgifter"/>
        <Button x:Name="ButtonUdregn" Content="Udregn" HorizontalAlignment="Left" Margin="314,271,0,0" VerticalAlignment="Top" Height="28" Width="115" Click="Udregn"/>
        <TextBox x:Name="SumBox" HorizontalAlignment="Left" Margin="312,317,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="SumBox_TextChanged" IsReadOnly="True"/>
        <Button x:Name="ButtonUndoIndtaegter" Content="Undo" HorizontalAlignment="Left" Margin="184,265,0,0" VerticalAlignment="Top" Click="ButtonUndoIndtaegter_Click"/>
        <Button x:Name="ButtonReset" Content="Reset" HorizontalAlignment="Left" Margin="341,390,0,0" VerticalAlignment="Top" Width="62" Click="ButtonReset_Click"/>
        <Button x:Name="ButtonUndoUdgifter" Content="Undo" HorizontalAlignment="Left" Margin="518,265,0,0" VerticalAlignment="Top" Click="ButtonUndoUdgifter_Click"/>
    </Grid>
</Window>
